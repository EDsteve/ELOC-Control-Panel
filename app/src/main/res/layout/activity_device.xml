<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ng3.activities.DeviceActivity">

    <de.eloc.eloc_control_panel.ng3.widgets.ElocAppBar
        android:id="@+id/eloc_app_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:show_back_button="true"
        app:show_settings_button="true"
        app:show_user_name="true" />

    <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
        android:id="@+id/swipe_refresh_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_behavior="com.google.android.material.appbar.AppBarLayout$ScrollingViewBehavior">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:id="@+id/loading_linear_layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <TextView
                    android:id="@+id/connection_status_text_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="@string/connecting"
                    android:textAlignment="center" />

                <Space
                    android:layout_width="1dp"
                    android:layout_height="32dp" />

                <com.google.android.material.progressindicator.LinearProgressIndicator
                    android:id="@+id/connection_progress_indicator"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="32dp"
                    android:indeterminate="true" />

            </LinearLayout>

            <TextView
                android:id="@+id/start_recording_button"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:background="@color/recorder_button"
                android:clickable="true"
                android:elevation="16dp"
                android:focusable="true"
                android:gravity="center"
                android:paddingVertical="16dp"
                android:text="@string/start_recording"
                android:textAlignment="center"
                android:textAppearance="@style/TextAppearance.MaterialComponents.Button"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintWidth_percent="0.5"
                tools:visibility="invisible" />

            <TextView
                android:id="@+id/start_detecting_button"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:background="@color/detector_button"
                android:clickable="true"
                android:elevation="16dp"
                android:focusable="true"
                android:gravity="center"
                android:paddingVertical="16dp"
                android:text="@string/start_detecting"
                android:textAlignment="center"
                android:textAppearance="@style/TextAppearance.MaterialComponents.Button"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@id/start_recording_button"
                app:layout_constraintWidth_percent="0.5"
                tools:visibility="invisible" />

            <ScrollView
                android:id="@+id/content_scroll_view"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                app:layout_constraintBottom_toTopOf="@id/start_recording_button"
                app:layout_constraintTop_toTopOf="parent"
                tools:visibility="invisible">


                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <de.eloc.eloc_control_panel.ng3.widgets.SimpleGauge
                        android:id="@+id/battery_gauge"
                        android:layout_width="0dp"
                        android:layout_height="84dp"
                        android:layout_margin="16dp"
                        app:alwaysFilled="false"
                        app:criticalColor="@color/critical_red"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintWidth_percent="0.33"
                        app:lowColor="@color/low_orange"
                        app:lowColorThreshold="80"
                        app:normalColor="@color/normal_green"
                        app:showDiscreteColors="true" />

                    <de.eloc.eloc_control_panel.ng3.widgets.SimpleGauge
                        android:id="@+id/gps_gauge"
                        android:layout_width="0dp"
                        android:layout_height="84dp"
                        app:criticalColor="@color/normal_green"
                        app:layout_constraintStart_toEndOf="@id/battery_gauge"
                        app:layout_constraintTop_toTopOf="@id/battery_gauge"
                        app:layout_constraintWidth_percent="0.33"
                        app:lowColor="@color/low_orange"
                        app:lowColorThreshold="15"
                        app:normalColor="@color/critical_red"
                        app:showDiscreteColors="false" />

                    <de.eloc.eloc_control_panel.ng3.widgets.SimpleGauge
                        android:id="@+id/storage_gauge"
                        android:layout_width="0dp"
                        android:layout_height="84dp"
                        app:alwaysFilled="false"
                        app:criticalColor="@color/critical_red"
                        app:criticalColorThreshold="30"
                        app:layout_constraintEnd_toStartOf="@id/battery_gauge"
                        app:layout_constraintTop_toTopOf="@id/battery_gauge"
                        app:layout_constraintWidth_percent="0.33"
                        app:lowColor="@color/low_storage"
                        app:lowColorThreshold="80"
                        app:normalColor="@color/normal_green"
                        app:showDiscreteColors="true" />

                    <TextView
                        android:id="@+id/gps_status"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        app:layout_constraintBottom_toBottomOf="@id/gps_gauge"
                        app:layout_constraintEnd_toEndOf="@id/gps_gauge"
                        app:layout_constraintStart_toStartOf="@id/gps_gauge"
                        app:layout_constraintTop_toTopOf="@id/gps_gauge"
                        tools:text="8825m" />

                    <TextView
                        android:id="@+id/battery_status"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        app:layout_constraintBottom_toBottomOf="@id/battery_gauge"
                        app:layout_constraintEnd_toEndOf="@id/battery_gauge"
                        app:layout_constraintStart_toStartOf="@id/battery_gauge"
                        app:layout_constraintTop_toTopOf="@id/battery_gauge"
                        tools:text="88%" />

                    <TextView
                        android:id="@+id/storage_status"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:textAlignment="center"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        app:layout_constraintBottom_toBottomOf="@id/storage_gauge"
                        app:layout_constraintEnd_toEndOf="@id/storage_gauge"
                        app:layout_constraintStart_toStartOf="@id/storage_gauge"
                        app:layout_constraintTop_toTopOf="@id/storage_gauge"
                        tools:text="95%\nFree" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/storage"
                        android:textStyle="bold"
                        app:layout_constraintEnd_toEndOf="@id/storage_gauge"
                        app:layout_constraintStart_toStartOf="@id/storage_gauge"
                        app:layout_constraintTop_toBottomOf="@id/storage_gauge" />

                    <TextView
                        android:id="@+id/battery_gauge_label"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/battery"
                        android:textStyle="bold"
                        app:layout_constraintEnd_toEndOf="@id/battery_gauge"
                        app:layout_constraintStart_toStartOf="@id/battery_gauge"
                        app:layout_constraintTop_toBottomOf="@id/battery_gauge"
                        tools:viewBindingIgnore="true" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/gps_accuracy"
                        android:textStyle="bold"
                        app:layout_constraintEnd_toEndOf="@id/gps_gauge"
                        app:layout_constraintStart_toStartOf="@id/gps_gauge"
                        app:layout_constraintTop_toBottomOf="@id/gps_gauge" />

                    <com.google.android.material.divider.MaterialDivider
                        android:id="@+id/divider1"
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:layout_marginVertical="16dp"
                        app:dividerColor="@color/black"
                        app:layout_constraintTop_toBottomOf="@id/battery_gauge_label"
                        tools:viewBindingIgnore="true" />

                    <TextView
                        android:id="@+id/status_section_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="16dp"
                        android:text="@string/status"
                        android:textAllCaps="true"
                        android:textAppearance="@style/TextAppearance.Material3.TitleMedium"
                        android:textColor="@color/status_grey"
                        android:textStyle="bold"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/divider1"
                        tools:viewBindingIgnore="true" />

                    <TextView
                        android:id="@+id/detecting_since_text_view"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="16dp"
                        android:layout_marginVertical="8dp"
                        android:textColor="@color/status_field_green"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/status_section_title"
                        tools:text="1D 10H 22M" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/detecting_since"
                        app:layout_constraintBottom_toBottomOf="@id/detecting_since_text_view"
                        app:layout_constraintStart_toStartOf="@id/status_section_title"
                        app:layout_constraintTop_toTopOf="@id/detecting_since_text_view" />

                    <TextView
                        android:id="@+id/recording_text_view"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="16dp"
                        android:layout_marginVertical="8dp"
                        android:textColor="@color/status_field_red"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/detecting_since_text_view"
                        tools:text="OFF" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/recording"
                        app:layout_constraintBottom_toBottomOf="@id/recording_text_view"
                        app:layout_constraintStart_toStartOf="@id/status_section_title"
                        app:layout_constraintTop_toTopOf="@id/recording_text_view" />

                    <com.google.android.material.divider.MaterialDivider
                        android:id="@+id/divider2"
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:layout_marginVertical="16dp"
                        app:dividerColor="@color/black"
                        app:layout_constraintTop_toBottomOf="@id/recording_text_view"
                        tools:viewBindingIgnore="true" />

                    <TextView
                        android:id="@+id/detector_section_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="16dp"
                        android:text="@string/detector_settings"
                        android:textAllCaps="true"
                        android:textAppearance="@style/TextAppearance.Material3.TitleMedium"
                        android:textColor="@color/detector_settings_title"
                        android:textStyle="bold"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/divider2"
                        tools:viewBindingIgnore="true" />

                    <TextView
                        android:id="@+id/record_when_detected_text_view"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="16dp"
                        android:layout_marginVertical="8dp"
                        android:textColor="@color/status_field_green"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/detector_section_title"
                        tools:text="ON" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/record_when_detected"
                        app:layout_constraintBottom_toBottomOf="@id/record_when_detected_text_view"
                        app:layout_constraintStart_toStartOf="@id/detector_section_title"
                        app:layout_constraintTop_toTopOf="@id/record_when_detected_text_view" />

                    <TextView
                        android:id="@+id/model_text_view"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="16dp"
                        android:layout_marginVertical="8dp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/record_when_detected_text_view"
                        tools:text="Trumpet_V12" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/model"
                        app:layout_constraintBottom_toBottomOf="@id/model_text_view"
                        app:layout_constraintStart_toStartOf="@id/detector_section_title"
                        app:layout_constraintTop_toTopOf="@id/model_text_view" />

                    <TextView
                        android:id="@+id/communication_text_view"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="16dp"
                        android:layout_marginVertical="8dp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/model_text_view"
                        tools:text="LoRa" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/communication"
                        app:layout_constraintBottom_toBottomOf="@id/communication_text_view"
                        app:layout_constraintStart_toStartOf="@id/detector_section_title"
                        app:layout_constraintTop_toTopOf="@id/communication_text_view" />

                    <com.google.android.material.divider.MaterialDivider
                        android:id="@+id/divider3"
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:layout_marginVertical="16dp"
                        app:dividerColor="@color/black"
                        app:layout_constraintTop_toBottomOf="@id/communication_text_view"
                        tools:viewBindingIgnore="true" />

                    <TextView
                        android:id="@+id/recorder_section_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="16dp"
                        android:text="@string/recorder_settings"
                        android:textAllCaps="true"
                        android:textAppearance="@style/TextAppearance.Material3.TitleMedium"
                        android:textColor="@color/recorder_settings_title"
                        android:textStyle="bold"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/divider3"
                        tools:viewBindingIgnore="true" />

                    <TextView
                        android:id="@+id/sample_rate_text_view"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="16dp"
                        android:layout_marginVertical="8dp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/recorder_section_title"
                        tools:text="1600" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/sample_rate"
                        app:layout_constraintBottom_toBottomOf="@id/sample_rate_text_view"
                        app:layout_constraintStart_toStartOf="@id/recorder_section_title"
                        app:layout_constraintTop_toTopOf="@id/sample_rate_text_view" />

                    <TextView
                        android:id="@+id/gain_text_view"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="16dp"
                        android:layout_marginVertical="8dp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/sample_rate_text_view"
                        tools:text="HIGH" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/gain"
                        app:layout_constraintBottom_toBottomOf="@id/gain_text_view"
                        app:layout_constraintStart_toStartOf="@id/recorder_section_title"
                        app:layout_constraintTop_toTopOf="@id/gain_text_view" />

                    <TextView
                        android:id="@+id/hours_per_file_text_view"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="16dp"
                        android:layout_marginVertical="8dp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/gain_text_view"
                        tools:text="1" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/hours_per_file"
                        app:layout_constraintBottom_toBottomOf="@id/hours_per_file_text_view"
                        app:layout_constraintStart_toStartOf="@id/recorder_section_title"
                        app:layout_constraintTop_toTopOf="@id/hours_per_file_text_view" />

                    <com.google.android.material.divider.MaterialDivider
                        android:id="@+id/divider4"
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:layout_marginVertical="16dp"
                        app:dividerColor="@color/black"
                        app:layout_constraintTop_toBottomOf="@id/hours_per_file_text_view"
                        tools:viewBindingIgnore="true" />

                    <TextView
                        android:id="@+id/misc_section_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="16dp"
                        android:text="@string/misc"
                        android:textAllCaps="true"
                        android:textAppearance="@style/TextAppearance.Material3.TitleMedium"
                        android:textColor="@color/status_grey"
                        android:textStyle="bold"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/divider4"
                        tools:viewBindingIgnore="true" />

                    <TextView
                        android:id="@+id/session_id_text_view"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="16dp"
                        android:layout_marginVertical="8dp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/misc_section_title"
                        tools:text="ELOC23432423497" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/session_id"
                        app:layout_constraintBottom_toBottomOf="@id/session_id_text_view"
                        app:layout_constraintStart_toStartOf="@id/misc_section_title"
                        app:layout_constraintTop_toTopOf="@id/session_id_text_view" />

                    <Space
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        app:layout_constraintTop_toBottomOf="@id/session_id_text_view" />

                </androidx.constraintlayout.widget.ConstraintLayout>
            </ScrollView>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>
</androidx.coordinatorlayout.widget.CoordinatorLayout>