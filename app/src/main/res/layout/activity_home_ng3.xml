<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ng3.activities.HomeActivityNg3">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.appcompat.widget.Toolbar
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/actionbar">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageButton
                    android:id="@+id/settings_button"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_marginHorizontal="16dp"
                    android:background="@android:color/transparent"
                    android:contentDescription="@string/open_settings"
                    android:scaleType="fitXY"
                    android:src="@drawable/settings_outline"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:tint="@color/actionbar_icon" />

                <View
                    android:id="@+id/connection_status_icon"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_marginHorizontal="16dp"
                    android:background="@drawable/circle"
                    android:backgroundTint="@color/connected"
                    app:layout_constraintBottom_toBottomOf="@id/settings_button"
                    app:layout_constraintEnd_toStartOf="@id/settings_button"
                    app:layout_constraintTop_toTopOf="@id/settings_button" />

                <TextView
                    android:id="@+id/connection_status_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/connected"
                    app:layout_constraintBottom_toBottomOf="@id/connection_status_icon"
                    app:layout_constraintEnd_toStartOf="@id/connection_status_icon"
                    app:layout_constraintTop_toTopOf="@id/connection_status_icon" />

                <TextView
                    android:id="@+id/eloc_name_text_view"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textAppearance="@style/TextAppearance.Eloc.HeadlineSmall"
                    app:layout_constraintEnd_toStartOf="@id/connection_status_label"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="@id/settings_button"
                    tools:text="ELOC224" />

                <TextView
                    android:id="@+id/user_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/user_label"
                    android:textStyle="bold"
                    app:layout_constraintStart_toStartOf="@id/eloc_name_text_view"
                    app:layout_constraintTop_toBottomOf="@id/eloc_name_text_view"
                    tools:text="USER: Tester" />

            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.appcompat.widget.Toolbar>
    </com.google.android.material.appbar.AppBarLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="com.google.android.material.appbar.AppBarLayout$ScrollingViewBehavior"
        tools:context=".ng3.activities.HomeActivityNg3">


        <com.google.android.material.tabs.TabLayout
            android:id="@+id/tablayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:background="@android:color/transparent"
            app:layout_constraintTop_toTopOf="parent"
            app:tabBackground="@drawable/tab_items"
            app:tabIndicatorColor="@color/color_on_active_tab"
            app:tabMode="fixed"
            app:tabSelectedTextAppearance="@style/TextAppearance.Eloc.TitleLarge"
            app:tabSelectedTextColor="@color/color_on_active_tab"
            app:tabTextAppearance="@style/TextAppearance.Eloc.TitleLarge"
            app:tabTextColor="@color/color_on_inactive_tab"
            tools:viewBindingIgnore="true">

            <com.google.android.material.tabs.TabItem
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/recorder" />

            <com.google.android.material.tabs.TabItem
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/detector" />
        </com.google.android.material.tabs.TabLayout>

        <androidx.viewpager2.widget.ViewPager2
            android:id="@+id/pager"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:background="@color/color_pager"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tablayout" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.coordinatorlayout.widget.CoordinatorLayout>