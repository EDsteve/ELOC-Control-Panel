<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.appbar.AppBarLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/actionbar"
        android:orientation="horizontal"
        android:padding="0dp">

        <Space
            android:id="@+id/spacer"
            android:layout_width="match_parent"
            android:layout_height="12dp"
            app:layout_constraintTop_toTopOf="parent"
            tools:viewBindingIgnore="true" />

        <ImageButton
            android:id="@+id/back_button"
            android:layout_width="56dp"
            android:layout_height="44dp"
            android:layout_marginVertical="8dp"
            android:background="@android:color/transparent"
            android:contentDescription="@string/go_back"
            android:paddingStart="12dp"
            android:scaleType="fitXY"
            android:src="@drawable/arrow_back"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:tint="@color/white"
            tools:ignore="RtlSymmetry,DuplicateSpeakableTextCheck,TouchTargetSizeCheck" />

        <ImageButton
            android:id="@+id/left_menu_button"
            android:layout_width="56dp"
            android:layout_height="44dp"
            android:layout_marginVertical="8dp"
            android:background="@android:color/transparent"
            android:contentDescription="@string/open_drawer_menu"
            android:paddingStart="12dp"
            android:scaleType="fitXY"
            android:src="@drawable/menu"
            app:layout_constraintStart_toEndOf="@id/back_button"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="RtlSymmetry,DuplicateSpeakableTextCheck,TouchTargetSizeCheck" />

        <ImageButton
            android:id="@+id/right_menu_button"
            android:layout_width="60dp"
            android:layout_height="44dp"
            android:layout_marginTop="8dp"
            android:background="@android:color/transparent"
            android:contentDescription="@string/open_drawer_menu"
            android:paddingEnd="16dp"
            android:scaleType="fitXY"
            android:src="@drawable/menu"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="RtlSymmetry,TouchTargetSizeCheck" />

        <ImageButton
            android:id="@+id/settings_button"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:layout_marginHorizontal="16dp"
            android:background="@android:color/transparent"
            android:contentDescription="@string/open_settings"
            android:scaleType="fitXY"
            android:src="@drawable/settings_outline"
            app:layout_constraintEnd_toStartOf="@id/right_menu_button"
            app:layout_constraintTop_toBottomOf="@id/spacer"
            app:tint="@color/actionbar_icon"
            tools:ignore="ImageContrastCheck,TouchTargetSizeCheck" />

        <View
            android:id="@+id/connection_status_icon"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginHorizontal="16dp"
            android:layout_marginVertical="4dp"
            android:background="@drawable/circle"
            android:backgroundTint="@color/connected"
            app:layout_constraintBottom_toTopOf="@id/bottom_space"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/right_menu_button" />

        <TextView
            android:id="@+id/connection_status_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/connected"
            app:layout_constraintBottom_toBottomOf="@id/connection_status_icon"
            app:layout_constraintEnd_toStartOf="@id/connection_status_icon"
            app:layout_constraintTop_toTopOf="@id/connection_status_icon" />

        <TextView
            android:id="@+id/title_text_view"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textAppearance="@style/TextAppearance.Eloc.HeadlineSmall"
            app:layout_constraintEnd_toStartOf="@id/settings_button"
            app:layout_constraintStart_toEndOf="@id/padder"
            app:layout_constraintTop_toTopOf="@id/settings_button"
            tools:ignore="RtlSymmetry"
            tools:text="ELOC224" />

        <LinearLayout
            android:id="@+id/padder"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintStart_toEndOf="@id/left_menu_button"
            app:layout_constraintTop_toTopOf="@id/left_menu_button"
            tools:viewBindingIgnore="true">

            <Space
                android:id="@+id/wide_title_padder"
                android:layout_width="16dp"
                android:layout_height="24dp" />

            <Space
                android:id="@+id/narrow_title_padder"
                android:layout_width="4dp"
                android:layout_height="24dp" />
        </LinearLayout>

        <TextView
            android:id="@+id/user_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:textColor="@color/user_label"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@id/bottom_space"
            app:layout_constraintStart_toEndOf="@id/back_button"
            app:layout_constraintTop_toBottomOf="@id/title_text_view"
            tools:text="USER: Tester" />

        <Space
            android:id="@+id/bottom_space"
            android:layout_width="match_parent"
            android:layout_height="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            tools:viewBindingIgnore="true" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</com.google.android.material.appbar.AppBarLayout>