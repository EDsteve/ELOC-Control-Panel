<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorPrimary"
    android:orientation="vertical"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/back_button"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:background="@android:color/transparent"
            android:contentDescription="@string/go_back"
            android:paddingVertical="6dp"
            android:paddingStart="0dp"
            android:paddingEnd="12dp"
            android:scaleType="fitXY"
            android:src="@drawable/arrow_back"
            app:tint="@color/white" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/select_mode"
            android:textAppearance="@style/TextAppearance.Material3.TitleMedium"
            android:textStyle="bold" />
    </LinearLayout>

    <Space
        android:layout_width="match_parent"
        android:layout_height="16dp" />

    <TextView
        android:id="@+id/record_button"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:background="?selectableItemBackground"
        android:clickable="true"
        android:focusable="true"
        android:gravity="center_vertical"
        android:text="@string/state_noun_record_on_detect_off"
        android:textAppearance="@style/TextAppearance.Material3.TitleMedium"
        app:backgroundTint="@null" />

    <com.google.android.material.divider.MaterialDivider
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="8dp"
        android:alpha="0.2"
        app:dividerColor="@color/white" />

    <TextView
        android:id="@+id/record_with_ai_button"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:background="?selectableItemBackground"
        android:clickable="true"
        android:focusable="true"
        android:gravity="center_vertical"
        android:text="@string/state_noun_record_on_detect_on"
        android:textAppearance="@style/TextAppearance.Material3.TitleMedium"
        app:backgroundTint="@null" />

    <com.google.android.material.divider.MaterialDivider
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="8dp"
        android:alpha="0.2"
        app:dividerColor="@color/white" />

    <TextView
        android:id="@+id/ai_detection_button"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:background="?selectableItemBackground"
        android:clickable="true"
        android:focusable="true"
        android:gravity="center_vertical"
        android:text="@string/state_noun_record_off_detect_on"
        android:textAppearance="@style/TextAppearance.Material3.TitleMedium"
        app:backgroundTint="@null" />

    <com.google.android.material.divider.MaterialDivider
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="8dp"
        android:alpha="0.2"
        app:dividerColor="@color/white" />

    <TextView
        android:id="@+id/record_on_event_button"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:background="?selectableItemBackground"
        android:clickable="true"
        android:focusable="true"
        android:gravity="center_vertical"
        android:text="@string/state_noun_record_on_event"
        android:textAppearance="@style/TextAppearance.Material3.TitleMedium"
        app:backgroundTint="@null" />

    <com.google.android.material.divider.MaterialDivider
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="8dp"
        android:alpha="0.2"
        app:dividerColor="@color/white" />

    <TextView
        android:id="@+id/stop_button"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:background="?selectableItemBackground"
        android:clickable="true"
        android:focusable="true"
        android:gravity="center_vertical"
        android:text="@string/state_noun_record_off_detect_off"
        android:textAppearance="@style/TextAppearance.Material3.TitleMedium"
        app:backgroundTint="@null" />

    <com.google.android.material.divider.MaterialDivider
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:alpha="0.2" android:layout_marginVertical="8dp"
        app:dividerColor="@color/white" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="16dp" />

</LinearLayout>